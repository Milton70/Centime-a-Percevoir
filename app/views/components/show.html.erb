<div class="container">
	<div class="row">        
	  <div class="col-md-12">
    	<div class="row">
    		<div class="col-sm-7 col-sm-offset-2">
					<%= form_tag component_path(@component), method: 'patch' do %>
		    		<div class="panel panel-default">
		  				<div class="panel-heading text-center"><strong>Component [ <%= @component.component_name %> ]</strong></div>
		  				<div class="panel-heading text-center">
		  					Edit Component Parameters
		  				</div>
		  				<div class="panel-body">
		  	  			 <table class="table table-striped table-bordered table-list">
	        				<thead>
	          				<tr>
					            <th class="text-center"><em class="fa fa-cog"></em></th>
					            <th>Parameter Key</th>
					            <th>Parameter Value</th>
	          				</tr> 
	        				</thead>
	        				<tbody>
	        					<%= show_params(@component) %>
	        				</tbody>
	        			</table>
		        	</div>
		        	<div class="panel-footer pull-right">
		        		<%= submit_tag 'Commit', class: "btn btn-success" %>
		        	</div>
		        </div>
		      <% end %>
	      </div>
      </div>
    </div>
  </div>
</div>      
    		
