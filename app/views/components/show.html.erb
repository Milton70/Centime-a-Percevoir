<div class="container">
	<div class="row">        
	  <div class="col-md-12">
    	<div class="row">
    		<div class="col-sm-7 col-sm-offset-2">
	    		<div class="panel panel-default">
	  				<div class="panel-heading text-center"><strong>Component [ <%= @component.component_name %> ]</strong></div>
	  				<div class="panel-heading">
	  					Edit Component Parameters
	  					<span class="pull-right" data-turbolinks="false">
	  						<%= link_to '<em class="fa fa-plus btn btn-info"></em>'.html_safe, add_param_path(@component.id) %>
	  					</span>
	  				</div>
	  				<div class="panel-body">
	  	  			 <table class="table table-striped table-bordered table-list">
        				<thead>
          				<tr>
				            <th class="text-center"><em class="fa fa-cog"></em></th>
				            <th>Parameter Key</th>
				            <th>Parameter Value</th>
          				</tr> 
        				</thead>
        				<tbody>
        					<%= show_params(@component) %>
        				</tbody>
        			</table>
	        	</div>
	        </div>
	      </div>
      </div>
    </div>
  </div>
</div>      
    		
