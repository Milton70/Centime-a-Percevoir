<div class="container">
	<div class="row">        
	  <div class="col-md-12">
    	<div class="row">
    		<div class="col-sm-7 col-sm-offset-2">
					<%= form_tag component_path(@component, ind: @param), method: 'patch' do %>
		    		<div class="panel panel-default">
		  				<div class="panel-heading text-center"><strong>Component [ <%= @component.component_name %> ]</strong></div>
		  				<div class="panel-heading text-center">
		  					Add Component Parameter
		  				</div>
		  				<div class="panel-body">
		       			<div class="col-md-5 nopadding">
		  						<div class="form-group">
		    						<input type="text" class="form-control" id="key" name="param_keys[]" value="" placeholder="parameter key">
		  						</div>
								</div>
								<div class="col-md-5 nopadding">
								  <div class="form-group">
								    <input type="text" class="form-control" id="value" name="param_values[]" value="" placeholder="parameter value">
								  </div>
								</div>
		        	</div>
		        	<div class="panel-footer pull-right">
		  					<%= submit_tag 'Commit', class: "btn btn-info" %>
		        	</div>
		        </div>
		      <% end %>
	      </div>
      </div>
    </div>
  </div>
</div>      
    		
