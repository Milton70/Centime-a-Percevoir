<div class="container">    
	<div class="col-md-12">
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <div class="row">
	        <div class="col col-md-6">
	          <h3 class="panel-title">Test Case [ <span class="text-info"><%= @test_case.test_case_name %></span> ] - Add Parameter Values</h3>
	        </div>
	      </div>
	    </div>
			<div class="panel-body">
  			 <table class="table table-striped table-bordered table-list">
  				<thead>
    				<tr>
							<th class="reduce">Component Name</th>
							<% x = 0 %>
							<% @components = @components.to_a[0] %>
							<% while x <= @tot_num_params - 1 %>				            
        				<th class="reduce"><%= @components[1][x].split(':')[0] %>	</th>
        				<% x += 1 %>
        			<% end %>
						</tr> 
  				</thead>
  				<tbody>
  					<%= add_params(@components, @test_case.id) %>
  				</tbody>
  			</table>
    	</div>
    	<div class="panel-footer">
				<div class="row">
					<div class="col-md-12">
						<span class="pull-left">			
							<%= back_button("/test_cases/#{@test_case.test_case_name}") %>
						</span>
						<span class="pull-right">
							<button class="btn btn-warning" onclick="addParamsToTestCase(<%= @test_case.id %>);">Commit</button>
						</span>
					</div>
				</div>
			</div>
    </div>
  </div>
</div>      
